<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/btn_view_test"
        android:text="@string/view_test"
        android:gravity="center"
        android:background="#0022aa"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/btn_noti_test"
        android:text="@string/noti_test"
        android:gravity="center"
        android:layout_gravity="right"
        android:background="#003300"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/btn_gps_test"
        android:text="@string/gps_test"
        android:gravity="center"
        android:background="#0022aa"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/btn_camera_test"
        android:text="@string/camera_test"
        android:gravity="center"
        android:layout_gravity="right"
        android:background="#003300"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/btn_sensor_test"
        android:text="@string/sensor_test"
        android:gravity="center"
        android:background="#0022aa"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/btn_dev_info"
        android:text="@string/dev_info"
        android:gravity="center"
        android:layout_gravity="right"
        android:background="#003300"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
